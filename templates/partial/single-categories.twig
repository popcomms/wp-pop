<div class="container-narrow block-container flex">
  <div class="py-3 pr-4">
    <img
      src="{{ theme.link }}/static/icons/tag-solid.svg"
      class="w-6 opacity-30"
    >
  </div>
  <div>
  {% for category in post.categories %}
    <a
      href="{{ category.link }}"
      class="inline-block bg-pop-pink text-pop-white text-sm font-semibold px-4 py-2 rounded-full transition-all transform hover:scale-110 m-1"
    >
      {{ category }}
    </a>
  {% endfor %}
  </div>
</div>
