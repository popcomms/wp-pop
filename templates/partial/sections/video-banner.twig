{% extends 'partial/sections/generic/wrapper.twig' %}

{% block content %}
  
  {% if fields.video %}
    
    <div class="video-banner" data-video-banner>
      
      <div class="video-banner__content">
        
        <div class="container-wide">
        
          {% if fields.heading_primary %}
            <{{ fields.heading_primary_tag }} class="video-banner__title">{{ fields.heading_primary }}</{{ fields.heading_primary_tag }}>
          {% endif %}
          
          {% if fields.heading_secondary %}
            <{{ fields.heading_secondary_tag }} class="video-banner__subtitle">{{ fields.heading_secondary }}</{{ fields.heading_secondary_tag }}>
          {% endif %}
          
          {% if fields.button %}
            <p class="video-banner__button">
              {% set external = (site.url not in fields.button.url) and ('#' not in fields.button.url) %}
              {% set pdf = '.pdf' in fields.button.url %}
              <a class="inline-flex justify-start sm:justify-center cursor-pointer shadow-md transition ease-in-out" href="{{ fields.button.url }}"{% if fields.button.target %} target="{{ fields.button.target }}"{% endif %}{% if external %} rel="noopener external"{% endif %}{% if pdf %} download{% endif %}>
                <span class="bg-pop-purple text-pop-white m-0 px-4 py-3 h-10 leading-0 text-xs font-semibold">
                  {{ fields.button.title }}
                </span>
                <span class="relative w-10 h-10 p-2 bg-pop-pink">
                  <svg class="w-full absolute transform left-1/2 top-1/2 -translate-y-1/2 -translate-x-1/2 rotate-45 hover:rotate-90 text-pop-white transition-all" width="24" height="25" viewBox="0 0 24 25" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path class="fill-current" d="M13.0607 0.625645C12.4749 0.0398579 11.5251 0.0398579 10.9393 0.625645L1.3934 10.1716C0.807611 10.7574 0.807611 11.7071 1.3934 12.2929C1.97919 12.8787 2.92893 12.8787 3.51472 12.2929L12 3.80762L20.4853 12.2929C21.0711 12.8787 22.0208 12.8787 22.6066 12.2929C23.1924 11.7071 23.1924 10.7574 22.6066 10.1716L13.0607 0.625645ZM13.5 24.3137V1.6863H10.5V24.3137H13.5Z" fill="currentColor"></path>
                  </svg>
                </span>
              </a>
            </p>
          {% endif %}
          
        </div>
        
      </div>
      
      {%
        include 'partial/autoplay-video.twig' with {
          video: Post(fields.video),
          class: 'video-banner__video'
        }
      %}
      
    </div>
    
  {% endif %}

{% endblock %}