<div class="relative w-full overflow-hidden">
  <div class="input-box opacity-0 relative">
    <input
      class="w-full font-normal text-3xl border-b-2 {{ text_color }} {{ bg_color }} {{ border_color }} focus:border-pop-pink"
      type="{{type}}"
      v-model="{{model}}"
      placeholder="{{placeholder}}"
      @keydown="{{action}}"
    >
    {% if arrow %}
    <svg class="absolute top-0 right-0" width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M36.3746 25.0607C36.9604 24.4749 36.9604 23.5251 36.3746 22.9393L26.8287 13.3934C26.2429 12.8076 25.2931 12.8076 24.7073 13.3934C24.1216 13.9792 24.1216 14.9289 24.7073 15.5147L33.1926 24L24.7073 32.4853C24.1216 33.0711 24.1216 34.0208 24.7073 34.6066C25.2931 35.1924 26.2429 35.1924 26.8287 34.6066L36.3746 25.0607ZM12.6865 25.5L35.3139 25.5L35.3139 22.5L12.6865 22.5L12.6865 25.5Z" fill="#F8F7EE"/>
    </svg>
    {% endif %}
    {% if guide %}
      <div class="text-sm pt-1 w-full text-right {{ text_color }}">click or hit enter</div>
    {% endif %}
  </div>
  <div class="input-swipe absolute -top-full left-0 bg-pop-white w-full h-full"></div>
</div>