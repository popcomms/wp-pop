<div class="flex relative">
  <div class="w-full sm:w-1/2 form-text opacity-0 sm:pr-8 sm:mb-12 leading-tight text-base sm:text-xl md:text-2xl">
    Please provide your <span class="text-pop-yellow">name</span>  &amp; <span class="text-pop-yellow">email</span>.
  </div>
</div>
<div class="my-4">
  {% include "/templates/partial/input.twig" with
    {
      'type': 'text',
      'name': 'name',
      'model': 'form.name.value',
      'placeholder': 'Your name *',
      'action': 'validateName',
      'guide': false,
      'arrow': false,
      'text_color': 'text-pop-white',
      'bg_color': 'bg-pop-black',
      'border_color': 'border-pop-white',
      'valid': 'validationHighlight(form.name.valid)'
    }
  %}
</div>
<div class="my-4">
  {% include "/templates/partial/input.twig" with
    {
      'type': 'email',
      'name': 'email',
      'model': 'form.email.value',
      'placeholder': 'Your email *',
      'action': "validateEmail",
      'guide': true,
      'arrow': true,
      'text_color': 'text-pop-white',
      'bg_color': 'bg-pop-black',
      'border_color': 'border-pop-white',
      'valid': 'validationHighlight(form.email.valid)'
    }
  %}
</div>
