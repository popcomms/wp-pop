<div class="sm:grid sm:grid-cols-2">
  <div class="hidden sm:block relative" style="padding-bottom: 100%;">
    <div class="absolute top-0 left-0 w-full h-full bg-no-repeat bg-center bg-cover" style="background-image: url({{ fields.image.url }})"></div>
    <!-- <img
      src="{{ fields.image.url }}"
      class="w-full object-cover inline-block"
    > -->
  </div>
  <div class="flex flex-col">
    <div class="h-1/2 bg-pop-{{fields.accent_color}} text-pop-white p-6 flex flex-col justify-center">
      <h3 class="font-medium">{{ fields.title }}</h3>
    </div>
    <div class="h-1/2 flex flex-col justify-between {{ fields.theme == 'dark' ? 'bg-pop-black' : 'bg-pop-white' }}" >
      <div class="flex items-center h-full p-6 {{ fields.theme == 'dark' ? 'text-pop-white' : 'text-pop-black' }}">
        <h6 class="font-normal"  style="font-size: 24px;">{{ fields.text }}</h6>
      </div>
      <div
        class="flex justify-end cursor-pointer"
        @click="nextStep()"
      >
        <div class="{{ fields.button.background_color == 'black' ? 'bg-pop-black' : 'bg-pop-white' }} {{ fields.button.background_color == 'black' ? 'text-pop-white' : 'text-pop-black' }} text-pop-white m-0 px-4 py-3 h-12 leading-0">
          Download
        </div>
        <div class="w-12 h-12 p-3 bg-pop-{{ fields.button.accent_color }}">
          <svg class="transform rotate-90 text-pop-white" width="24" height="25" viewBox="0 0 24 25" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path
              class="fill-current text-pop-{{ fields.button.arrow_color }}"
              d="M13.0607 0.625645C12.4749 0.0398579 11.5251 0.0398579 10.9393 0.625645L1.3934 10.1716C0.807611 10.7574 0.807611 11.7071 1.3934 12.2929C1.97919 12.8787 2.92893 12.8787 3.51472 12.2929L12 3.80762L20.4853 12.2929C21.0711 12.8787 22.0208 12.8787 22.6066 12.2929C23.1924 11.7071 23.1924 10.7574 22.6066 10.1716L13.0607 0.625645ZM13.5 24.3137V1.6863H10.5V24.3137H13.5Z"
              fill="currentColor"
            />
          </svg>
        </div>
      </div>
    </div>
  </div>
</div>
