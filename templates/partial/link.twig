{% if link.url != null %}
<a href="{{ link.url }}">
{% endif %}
  <div class="link flex cursor-pointer">
    {% if link.text %}
      <div class="flex items-center px-8 py-2 {{ link.background_color == 'black' ? 'bg-pop-black' : 'bg-pop-white' }}">
        <p class="link__text text-pop-white m-0 transform group-hover:text-xl {{ link.background_color == 'black' ? 'text-pop-white' : 'text-pop-black' }}">
          {{ link.text }}
        </p>
      </div>
    {% endif %}
    <div class="w-12 h-12 p-3 bg-pop-{{ link.accent_color }}">
      <svg class="transform rotate-{{ link.angle }}" width="24" height="25" viewBox="0 0 24 25" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path class="fill-current text-pop-{{ link.arrow_color }}" d="M13.0607 0.625645C12.4749 0.0398579 11.5251 0.0398579 10.9393 0.625645L1.3934 10.1716C0.807611 10.7574 0.807611 11.7071 1.3934 12.2929C1.97919 12.8787 2.92893 12.8787 3.51472 12.2929L12 3.80762L20.4853 12.2929C21.0711 12.8787 22.0208 12.8787 22.6066 12.2929C23.1924 11.7071 23.1924 10.7574 22.6066 10.1716L13.0607 0.625645ZM13.5 24.3137V1.6863H10.5V24.3137H13.5Z" fill="#3A3EAB"/>
      </svg>
    </div>
  </div>
{% if link.url != null %}
</a>
{% endif %}
