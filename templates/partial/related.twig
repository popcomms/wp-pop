<div class="py-20  bg-pop-{{ content.theme == 'black' ? 'black' : 'white' }}">
  <div class="container-narrow border-t border-gray-300 text-pop-{{ content.theme == 'black' ? 'white' : 'black' }}">

    <h3 class="my-12">
      {% if post.type == 'case-studies' %}
        Related Case Studies
      {% else %}
        Related Posts
      {% endif %}
    </h3>

    <div class="grid grid-cols-1 md:grid-cols-2 mb-16 gap-2">
    {% for post in related %}
    <a
    rel="external"
    href="{{ post.link }}"
    class="group flex items-center border border-gray-200"
    >
      <div class="h-full w-1/3 sm:w-1/3 md:w-1/2 bg-cover bg-center bg-no-repeat" style="background-image: url({{ post.thumbnail }})">
        <!-- <img class="object-cover" src="{{ post.thumbnail }}" alt=""> -->
      </div>
      <div class="relative h-full w-2/3  flex items-center group-hover:bg-pop-yellow transition-all text-base p-5 pb-12 sm:p-8 sm:pb-12 ">
        <p class="">
          {{ post.title }}
        </p>
        <div class="absolute bottom-0 right-0">
          <div class="w-12 h-12 p-3 bg-pop-pink">
            <svg class="transform rotate-45 group-hover:rotate-90 transition-transform duration-300" width="24" height="25" viewBox="0 0 24 25" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path class="fill-current text-pop-white group-hover:text-pop-yellow" d="M13.0607 0.625645C12.4749 0.0398579 11.5251 0.0398579 10.9393 0.625645L1.3934 10.1716C0.807611 10.7574 0.807611 11.7071 1.3934 12.2929C1.97919 12.8787 2.92893 12.8787 3.51472 12.2929L12 3.80762L20.4853 12.2929C21.0711 12.8787 22.0208 12.8787 22.6066 12.2929C23.1924 11.7071 23.1924 10.7574 22.6066 10.1716L13.0607 0.625645ZM13.5 24.3137V1.6863H10.5V24.3137H13.5Z" fill="#3A3EAB"/>
            </svg>
          </div>
        </div>
      </div>
      </a>
    {% endfor %}
    </div>
  </div>
</div>
