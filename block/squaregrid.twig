{% if is_preview %}
  <p><strong>Square Grid</strong> - I will only appear in the editor.</p>
{% endif %}

{% if not is_preview %}
  <div class="container-wide md:border-16 md:border-pop-white md:shadow-sm md:box-content" >
    <div class="px-8 py-12 pattern polkadot-blue">
      <h4>{{ fields.title }}</h4>
    </div>
    <div class="grid grid-cols-2 grid-rows-4 sm:grid-cols-4 sm:grid-rows-2 relative border border-pop-gray">

      {% for item in fields.square_grid %}

        {% if item.acf_fc_layout == 'Icon' %}
          <div class="bg-pop-pink border border-pop-gray" style="aspect-ratio: 1;">
            icon
          </div>
        {% endif %}

        {% if item.acf_fc_layout == 'Link Card' %}
          <a href="{{ item.url }}" >
            <div class="bg-pop-white flex flex-col justify-between border border-pop-gray" style="aspect-ratio: 1;">
              <h6 class="text-lg py-6 px-2 md:px-6 m-0">{{ item.text }}</h6>
              <div class="self-end">
                {% include "/templates/partial/arrow.twig" with 
                  {
                    'arrow': fields.arrow,
                  }
                %}
              </div>
            </div>
          </a>
        {% endif %}
        
      {% endfor %}
    </div>
  </div>
{% endif %}