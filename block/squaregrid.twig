{% if is_preview %}
  <p><strong>Square Grid</strong> - I will only appear in the editor.</p>
{% endif %}

{% if not is_preview %}
  <div class="container-wide" >
    <div class="md:border-16 md:{{ theme_border_color }} {{ theme_bg_color }} md:shadow-sm md:box-content">
      <div class="relative px-8 py-12 pattern strip-blue">
        <h4>{{ fields.title }}</h4>
      </div>
      <div class="relative grid gap-0.5 grid-cols-2 grid-rows-4 sm:grid-cols-4 sm:grid-rows-2 border-2 border-pop-black-dark {{ theme == 'dark' ? 'bg-pop-black-dark' : 'bg-pop-white'}}">
  
        {% for item in fields.square_grid %}
  
          {% if item.acf_fc_layout == 'Icon' %}
            <div class="bg-pop-pink ">
              icon
            </div>
          {% endif %}
  
          {% if item.acf_fc_layout == 'Link Card' %}
            <a href="{{ item.url }}" >
              <div class="{{ theme_bg_color }} flex flex-col justify-between ">
                <h6 class="text-lg py-6 px-2 md:px-6 m-0 {{ theme_text_color }}">{{ item.text }}</h6>
                <div class="self-end">
                  {% include "/templates/partial/arrow.twig" with 
                    {
                      'arrow': fields.arrow,
                    }
                  %}
                </div>
              </div>
            </a>
          {% endif %}
          
        {% endfor %}
      </div>
    </div>
  </div>
{% endif %}