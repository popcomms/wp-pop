{% if is_preview %}
  <p><strong>Portfolio</strong> - I will only appear in the editor.</p>
{% endif %}

{% if not is_preview %}
  <div class="container-wide border-16 border-pop-white shadow-sm box-content" >
    <div class="px-8 py-12 pattern polkadot-blue">
      <h4>{{ fields.title }}</h4>
    </div>
    <div class="grid grid-cols-2 grid-rows-4 relative border border-pop-gray">
      {% for item in fields.content %}
        {% set width = 'col-span-1' %}
        {% set height = 'row-span-1' %}
        {% set ratio = 'auto' %}
        
        {% if loop.index == 3 %}
          {% set width = 'col-span-2' %}
        {% elseif loop.index == 4 %}
          {% set height = 'row-span-2' %}
        {% else %}
          {% set ratio = '1' %}
        {% endif %}

        {% if item.acf_fc_layout == 'Image' %}
          <div class="{{ width }} {{ height }} border border-pop-gray" style="aspect-ratio: {{ ratio }}">
            <img class="object-cover" src="{{ item.image.url }}" alt="">
          </div>
        {% elseif item.acf_fc_layout == 'Icon' %}
          <div class="{{ width }} {{ height }} bg-pop-{{ item.icon }} border border-pop-gray" style="aspect-ratio: {{ ratio }}">
            icon
          </div>
        {% elseif item.acf_fc_layout == 'Link' %}
          <div class="{{ width }} {{ height }} bg-pop-white flex flex-col justify-between border border-pop-gray" style="aspect-ratio: {{ ratio }}">
            <h6 class="p-6 m-0">{{ item.text }}</h6>
            {% include "/templates/partial/link.twig" with 
            {
              'link': item.link,
            }
            %}
          </div>
        {% endif %}
      {% endfor %}
    </div>    
  </div>
{% endif %}