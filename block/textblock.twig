{% if is_preview %}
  <p><strong>Text Block</strong> - I will only appear in the editor.</p>
{% endif %}

{% if not is_preview %}
  <div class="container-narrow relative flex flex-wrap md:flex-nowrap" >
    <div class="md:mr-6 md:w-1/2">
      <h3 class="{{ theme_text_color }}">
        {{ fields.title }}
      </h3>
    </div>
    <div class="md:ml-6 md:w-1/2 {{ theme_text_color }}">
      {{ fields.text }}
    </div>
  </div>
{% endif %}