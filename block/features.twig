{% if is_preview %}
  <p><strong>Features</strong> - I will only appear in the editor.</p>
{% endif %}


{% if not is_preview %}

{% if fields.block_color == 'white' %}
  {% set theme = 'light' %}
{% elseif fields.block_color == 'black' %}
  {% set theme = 'dark' %}
{% endif %}

 <div class="container-wide" >
    <div class="md:{{ theme == 'dark' ? 'border-pop-black' : 'border-pop-white'}} {{ theme == 'dark' ? 'bg-pop-black' : 'bg-pop-white'}} md:box-content">
      {% include "/templates/partial/component-title.twig" with
        {
          'title': fields.title,
          'subtitle': fields.subtitle,
          'theme_text_color': theme_text_color,
          'title_color': fields.title_color,
          'pattern': fields.pattern.type,
          'pattern_color': fields.pattern.color,
          'pattern_opacity': fields.pattern.opacity
        }
      %}
      <div class="relative grid gap-0.5 grid-cols-1 grid-rows-auto sm:grid-cols-2 {{ theme == 'dark' ? 'bg-pop-black' : 'bg-pop-white'}}">
        {% for item in fields.features %}
          <div class="relative p-7">
            <h4 class="font-semibold mb-4 text-pop-{{ fields.title_color }}">
              {{ item.feature }}
            </h4>
            <div class="{{ theme == 'dark' ? 'text-pop-white': 'text-pop-dark' }}">
              {{ item.description }}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>

{% endif %}
